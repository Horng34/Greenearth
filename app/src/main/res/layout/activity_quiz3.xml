<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz3" android:background="@drawable/quizbg"
    android:orientation="vertical">
    <ImageView
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:src="@drawable/planet"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtquestion3"
            android:layout_width="450dp"
            android:layout_height="100dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_round"
            android:gravity="center"
            android:text="3. What kind of energy do you use every day?"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="250dp">

            <Button
                android:id="@+id/btnsolar"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/bg_round"
                android:text="Solar              energy"
                android:textAllCaps="false"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnhydro"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_round"
                android:text="Hydropower energy"
                android:textAllCaps="false"
                android:textSize="25sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="250dp">


            <Button
                android:id="@+id/btnwind"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_round"
                android:text="Wind             energy"
                android:textAllCaps="false"
                android:textSize="25sp" />


            <Button
                android:id="@+id/btnfossilfuel"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_round"
                android:text="energy from fossil fuel"
                android:textAllCaps="false"
                android:textSize="25sp" />


        </LinearLayout>
        <Button
            android:id="@+id/btnnextquestion3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="250dp"
            android:background="@color/white"
            android:text="Next"
            android:textColor="@color/green"
            android:textSize="25sp"
            android:textStyle="bold"/>





    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>