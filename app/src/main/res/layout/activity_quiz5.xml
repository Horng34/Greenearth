<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz5"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/earthaskbg"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-29dp"
        tools:layout_editor_absoluteY="29dp">

        <TextView
            android:id="@+id/txtquestion"
            android:layout_width="450dp"
            android:layout_height="80dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_roundgreen"
            android:gravity="center"
            android:text="What do you do after you have used the plastic?"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="50dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnthrow"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_green"
                android:text="Throw away"
                android:textSize="20sp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btnrecycle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_green"
                android:text="Recycle"
                android:textAllCaps="false"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="50dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnbin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_green"
                android:textAllCaps="false"
                android:text="Throw in the bin"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnreuse"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_green"
                android:text="Reuse"
                android:textAllCaps="false"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="695dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtfeedback"
                android:layout_width="466dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_roundgreen"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnfinish"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_roundgreen"
                android:text="Finish"
                android:textSize="25sp"
                android:textAllCaps="false"/>



        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>












