<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#F8BBD0"
    android:foregroundTint="#612929"
    tools:context=".TipActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnback"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@color/green"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="631dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@color/green"
            android:text="Some Tips"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="728dp"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="60dp">
        <ListView
            android:id="@+id/customListView"
            android:layout_width="278dp"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:divider="@color/black"
            android:dividerHeight="2dp"
            android:listSelector="@color/green"
            android:layout_marginLeft="5dp"/>

        <ScrollView
            android:layout_width="430dp"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp">

            <LinearLayout
                android:layout_width="450dp"
                android:layout_height="400dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="342dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="50dp" />

                <TextView
                    android:id="@+id/txtsometip"
                    android:layout_width="410dp"
                    android:layout_height="700dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:background="#41F0F4C3"
                    android:fontFamily="@font/adamina"
                    android:justificationMode="inter_word"
                    android:padding="4dp"
                    android:text="Here is the some tips that you use at home to combat climate change action."
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/green"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </ScrollView>




    </LinearLayout>

</RelativeLayout>