<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Greenearthscreen"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/entirescreenbg"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/btnappinfo"
        android:layout_width="63dp"
        android:layout_height="61dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/ic_baseline_info_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="720dp"
        android:layout_height="110dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.519"
        tools:layout_editor_absoluteX="11dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnclimatechange"
            android:layout_width="280dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_outline"
            android:text="Climate Change"
            android:textAllCaps="false"
            android:textColor="@color/green"
            android:backgroundTintMode="multiply"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnsuggestion"
            android:layout_width="280dp"
            android:layout_height="90dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/bg_outline"
            android:text="Suggestion"
            android:textAllCaps="false"
            android:textColor="@color/green"
            android:textSize="30sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="720dp"
        android:layout_height="110dp"
        android:layout_marginTop="260dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.519"
        tools:layout_editor_absoluteX="11dp"
        tools:ignore="MissingConstraints">
        <Button
            android:id="@+id/btngoal"
            android:layout_width="280dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_outline"
            android:text="Goal "
            android:textAllCaps="false"
            android:textColor="@color/green"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnreflection"
            android:layout_width="280dp"
            android:layout_height="85dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/bg_outline"
            android:text="Reflection Questions"
            android:textAllCaps="false"
            android:textColor="@color/green"
            android:textSize="25sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>